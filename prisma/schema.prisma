generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  username   String    @unique
  name       String?
  bio        String?
  email      String?
  password   String
  privilages String[]
  lastLogin  DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  Post       Post[]
}

model Project {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String     @unique
  description  String
  posts        Post[]
  documents    Document[]
  pinnedPostId String?    @db.ObjectId
  thumbnail    String?
  banner       String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Document {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  url       String
  type      String
  size      Int
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ResourceType {
  document
  youtube
  link
  file
}

type Resource {
  type      ResourceType
  url       String
  name      String
  fileName  String?
  updatedBy String?
  createdAt DateTime     @default(now())
}

model Post {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  content     String
  documentUrl String? // Optional document URL for article content (.docx, .pdf, etc.)
  author      User?      @relation(fields: [authorId], references: [id])
  authorId    String?    @db.ObjectId
  resources   Resource[]
  banner      String?
  project     Project?   @relation(fields: [projectId], references: [id])
  projectId   String?    @db.ObjectId
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
